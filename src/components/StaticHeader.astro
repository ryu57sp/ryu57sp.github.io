<header>
    <!-- Mobile Hamburger Menu -->
    <div class="fixed md:hidden flex items-center gap-3 top-4 start-4 z-30" @click="sidebarOpen = !sidebarOpen">
        <div class="size-10 flex items-center justify-center bg-neutral-800/50 rounded-md shadow-lg hover:bg-yellow-300 hover:text-black transition-all duration-300">
            <i class="fas" :class="sidebarOpen ? 'fa-times' : 'fa-bars'"></i>
        </div>
    </div>

    <!-- navigation -->
    <div class="fixed flex items-center gap-3 top-4 end-4 z-30">
        <a href="/"
        class="size-10 flex items-center justify-center bg-neutral-800/50 rounded-md shadow-lg hover:bg-yellow-300 hover:text-black transition-all duration-300"
        >
            <i class="fas fa-user"></i>
        </a>
    </div>
</header>