---
interface HeroImage {
  src: string;
  alt: string;
  gallery: string;
}
interface TitlePart {
  text: string;
  highlight: boolean;
}
interface HeroButton {
  text: string;
  action: string;
  variant: "primary" | "secondary";
  icon?: string;
}
interface HeroData {
  image: HeroImage;
  title: {
    parts: TitlePart[];
  };
  description: string;
  buttons: HeroButton[];
}

// Data section
const heroData: HeroData = {
  image: {
    src: "/img/top.webp",
    alt: "Hero Background",
    gallery: "hero",
  },
  title: {
    parts: [
      { text: "Ryuki Mikawa", highlight: false },
      { text: "Photography", highlight: true },
    ],
  },
  description: "",
  buttons: [
    {
      text: "Underwater",
      action: "goToSlide(2)",
      variant: "secondary",
    },
    {
      text: "Landscape",
      action: "goToSlide(3)",
      variant: "secondary",
    },
    {
      text: "Portrait",
      action: "goToSlide(4)",
      variant: "secondary",
    },
  ],
};
---

<div
  class="section min-h-screen flex items-center relative overflow-hidden py-24"
>
  <div
    class="absolute inset-0 hero-image bg-cover bg-center transition-transform duration-700"
    style={`background-image: url('${heroData.image.src}');`}
  >
  </div>
  <div
    class="absolute inset-0 bg-gradient-to-r from-black via-black/50 to-transparent"
  >
  </div>
  <div class="container mx-auto px-6 md:px-12 z-10 relative">
    <div class="w-full md:w-4/5 lg:w-1/2">
      <div class="w-24 h-1 bg-yellow-300 mb-6 rounded-full"></div>
      <h1
        class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight mb-4"
      >
        {
          heroData.title.parts.map((part) => (
            <span class={`block ${part.highlight ? "text-yellow-300" : ""}`}>
              {part.text}
            </span>
          ))
        }
      </h1>
      <p class="text-lg text-neutral-200 mb-8 max-w-lg">
        {heroData.description}
      </p>
      <div
        class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4"
      >
        <button
          @click="goToSlide(2)"
          class="relative bg-transparent border-2 border-yellow-300 text-yellow-300 px-8 py-3 rounded-md text-lg font-medium hover:bg-yellow-300 hover:text-black transition-all duration-300 overflow-hidden group"
        >
          <span class="relative z-10">
            Underwater<br />
            水中写真
          </span>
          <span
            class="absolute inset-0 bg-yellow-300 scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-center"
          ></span>
        </button>
        <button
          @click="goToSlide(3)"
          class="relative bg-transparent border-2 border-yellow-300 text-yellow-300 px-8 py-3 rounded-md text-lg font-medium hover:bg-yellow-300 hover:text-black transition-all duration-300 overflow-hidden group"
        >
          <span class="relative z-10">
            Landscape<br />
            自然風景
          </span>
          <span
            class="absolute inset-0 bg-yellow-300 scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-center"
          ></span>
        </button>
        <button
          @click="goToSlide(4)"
          class="relative bg-transparent border-2 border-yellow-300 text-yellow-300 px-8 py-3 rounded-md text-lg font-medium hover:bg-yellow-300 hover:text-black transition-all duration-300 overflow-hidden group"
        >
          <span class="relative z-10">
            Portrait<br />
            ポートレート
          </span>
          <span
            class="absolute inset-0 bg-yellow-300 scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-center"
          ></span>
        </button>
      </div>
    </div>
  </div>
</div>
