---
import StaticHeader from "../components/StaticHeader.astro";
import StaticSidebar from "../components/StaticSidebar.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="フリーランスエンジニア＆フォトグラファー、三川竜紀のポートフォリオサイトです。"
    />
    <title>Ryuki Mikawa Portfolio</title>
    <link rel="shortcut icon" type="image/x-icon" href="/img/favicon.jpg" />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;500;700&family=Raleway:wght@200;400&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body x-data="{ sidebarOpen: false }">
    <StaticHeader />
    <StaticSidebar />
    <main class="md:ms-20">
      <div
        class="section h-screen overflow-y-auto py-24 flex flex-col bg-gradient-to-b from-[var(--color-bg)] to-neutral-900 scrollable lg:px-16 xl:px-24"
      >
        <div class="container mx-auto px-4">
          <slot />
        </div>
      </div>
    </main>

    <script src="/src/scripts/vendor.js"></script>
  </body>
</html>
