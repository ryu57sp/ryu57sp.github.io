---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import "../styles/global.css";
import "@splidejs/splide/dist/css/splide.min.css";
import "glightbox/dist/css/glightbox.min.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="フリーランスエンジニア＆フォトグラファー、三川竜紀のポートフォリオサイトです。"
    />
    <title>Ryuki Mikawa Photography</title>
    <link rel="shortcut icon" type="image/x-icon" href="/img/favicon.jpg" />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;500;700&family=Raleway:wght@200;400&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body x-data="slider">
    <Header />
    <Sidebar />
    <main class="md:ms-20">
      <div class="splide" id="main-slider">
        <div class="splide__track">
          <div class="splide__list">
            <slot />
          </div>
        </div>
      </div>
    </main>

    <script src="/src/scripts/vendors.js"></script>
    <script src="/src/scripts/slider.js"></script>
    <script src="/src/scripts/lightbox-masonry.js"></script>
  </body>
</html>
